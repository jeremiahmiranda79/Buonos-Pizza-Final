<div class="container-contact">
  <div class="row mb-3">
    <label for="name" class="col-sm-2 col-form-label">Name</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="name_id" placeholder="sample name">
    </div>
  </div>
  <div class="row mb-3">
    <label for="email" class="col-sm-2 col-form-label">Email</label>
    <div class="col-sm-10">
      <input type="email" class="form-control" id="email_id" placeholder="sample@email.com">
    </div>
  </div>
  <div class="row mb-3">
    <label for="phone" class="col-sm-2 col-form-label">Phone</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="phone_id" placeholder="(###)-###-####">
    </div>
  </div>
  <div class="row mb-3">
    <label for="message" class="col-sm-2 col-form-label">Message</label>
    <div class="col-sm-10">
      <textarea type="text" class="form-control" rows="5" id="message_id" placeholder="sample message">
      </textarea>
    </div>
  </div>
  <center>
    <button onclick="sendEmail()" class="btn btn-primary">Send Message</button>
  </center>
</div>

