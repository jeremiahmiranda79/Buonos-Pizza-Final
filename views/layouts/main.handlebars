    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Permanent+Marker&display=swap" rel="stylesheet">    
  </head>
  <body>
    <header>
      <div class="navbar-top">
        <div class="container-fluid justify-content-center;">
          <a href="/"><img src="/images/buonos-logo1.jpg" class="logo" alt="buonos-logo"></a>
        </div>
      </div>
    </header>
    <main>
      {{{ body }}}
    </main>
    <footer>
      <nav class="navbar navbar-expand-sm navbar-dark bg-dark fixed-bottom">
        <div class="container-fluid">
          <div>
            <a class="nav-icon navbar-brand fa fa-phone-square" href="tel:+14808991200"></a>
            <p  style="color: aliceblue;">Phone</p>
          </div>
          <div>
            <a class="nav-icon navbar-brand fa fa-book" href="/menu"></a>
