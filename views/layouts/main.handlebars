              </li>
              <li class="nav-item">
                <a class="nav-link" href="/about">About Us</a>
              </li>
            </ul>
            {{#if loggedIn}}
              <button id="employeelogout">
                Logout | {{name}}
              </button>
            {{else}}
              <a href="/employee/login" class="">Login</a>
            {{/if}}
          </div>
        </div>
      </nav>
    </footer>
    <script src="/js/logout.js"></script>
    <script src="/js/login.js"></script>
