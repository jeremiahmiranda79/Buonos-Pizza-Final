                {{/each}}
              </select>
            </div>
          </div> --}}

          <div class="d-flex justify-content-evenly">
            <input type="hidden" name="item-id" value="{{item.id}}"/>
            <button type="submit" class="btn btn-primary">Update</button>
            <div>
              <a href="/menu" id="cancelButton" class="btn btn-warning">
                Cancel
              </a>
            </div>
            <button class="btn btn-danger" id="deleteButton" data-id="{{item.id}}">Delete</button>
          </div>
        </div>
