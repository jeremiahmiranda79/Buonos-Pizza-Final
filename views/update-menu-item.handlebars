<div class="update-item-background">
  <div class="container-update-item-header">
    <center>
      <h1>Update item</h1>
      <h4>For admin only</h4>
    </center>
  </div>

  <div class="container-update-item">
    <div class="container-fluid item">
      <form class="" id="updateMenuItem">
        <div class="container py-3">

          <h2 class="py-3">Update ({{item.name}}) item</h2>

          <div class="">

            <label for="menu-item-name" class="form-label">Item name</label>

            <input id="name" type="text" value="{{item.name}}" class="form-control" placeholder="{{item.name}}" required>

            <label for="item-description" class="form-label">
              Item description
            </label>

            <input type="text" id="description" class="form-control" value="{{item.description}}" placeholder="{{item.description}}" required>
          </div>

