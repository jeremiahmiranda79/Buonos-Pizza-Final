            <input type="text" id="description" class="form-control" value="{{item.description}}" placeholder="{{item.description}}" required>
          </div> --}}

          <div class="">
            <label for="category" class="form-label">Choose a category</label>
            <select id="categories" name="categories" class="form-select">
              <option value="{{cat.id}}" selected>Current ({{item.categoryId}})</option>
              {{#each cats as |cat|}}
                <option value="{{cat.id}}" id="categoryId">{{cat.name}}</option>
              {{/each}}
            </select>
          </div>

