<div class="update-category-background">
  <div class="container-update-category-header">
    <center>
      <h1>Update category</h1>
      <h4>For admin only</h4>
    </center>
  </div>

  <div class="container-update-category">
    <form class="" id="updateCategory">
      <div class="container py-3">
        <h2 class="py-3">Update ({{cat.name}}) Category</h2>

        <div class="mb-3 py-3">
          <label for="category-name" class="form-label">Category Name</label>
          <input id="name" type="text" value="{{cat.name}}" class="form-control">
          <input type="hidden" name="cat-id" value="{{cat.id}}"/>
        </div>

        <div class="d-flex justify-content-evenly">
          <div class="">
            <button type="submit" class="btn btn-primary">Update</button>
          </div>

          <div>
            <button id="deleteButton" data-id="{{cat.id}}" class="btn btn-primary">Delete</button>
          </div>

          <div>
            <a href="/menu" id="cancelButton" class="btn btn-primary">Cancel</a>
          </div>

        </div>
    </div>
  </form>
  </div>
</div>




<script src="/js/updateCategory.js"></script>