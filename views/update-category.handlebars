<head>
  <link rel="stylesheet" href="/css/updateInformation.css">
</head>

<div class="information-background">
  <div class="container-information-header">
    <center>
      <h1>Update category</h1>
      <h4>For admin only</h4>
    </center>
  </div>

  <div class="container-update-item">
    <div class="container-fluid contact">
      <form class="" id="updateCategory">   
        <div class="container py-3">
          <h2 class="py-3">Update ({{cat.name}}) category</h2>
          <div class="">
            <label for="category-name" class="form-label">Category name</label>
            <input id="name" type="text" value="{{cat.name}}" class="form-control" placeholder="{{cat.name}}" required>
            {{!-- <input type="hidden" name="cat-id" value="{{cat.id}}"/> --}}
          </div>
          
          <div class="">
            <label for="image" class="form-label">Choose an image:</label>
            <select id="image" name="image" class="form-select">
              <option value="{{cat.image}}" selected>Current ({{cat.image}})</option>
              {{#each imgs as |img|}}
                <option value="{{img.url}}">{{img.url}}</option>
              {{/each}}
            </select>
          </div>

          <div class="d-flex justify-content-evenly">
            <div class="">
              <button type="submit" class="btn btn-primary">Update</button>
            </div>

            <div>
              <a href="/menu" id="cancelButton" class="btn btn-warning">Cancel</a>
            </div>

            <div>
              <button class="btn btn-danger" id="deleteButton" data-id="{{cat.id}}">Delete</button>
            </div>
          </div>
        </div>
      </form>
    </div>
  </div>
  
  <br><br><br><br><br><br><br>
  <br><br><br><br><br><br><br>
</div>

<script src="/js/updateCategory.js"></script>