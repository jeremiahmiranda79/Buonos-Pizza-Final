<div class="create-category-background">
  <div class="container-create-category-header">
    <center>
      <h1>Create category</h1>
      <h4>For admin only</h4>
    </center>
  </div>

  <div class="container-create-category">
    <div class="container-fluid contact">
      <form id="addCat">
        <div class="">
          <h2 class="">Menu Categories</h2>
          <button class="btn btn-primary" type="button" data-bs-toggle="collapse" data-bs-target="#collapsable-catgeory-list" aria-expanded="false" aria-controls="collapsable-catgeory-list">
            See all active categories
          </button>

          <div class="collapse" id="collapsable-catgeory-list">
            <div class="card card-body">
              <ul>
                {{#each cats as |cat|}}  
                  <li>{{cat.name}}</li>           
                {{/each}}
              </ul>
            </div>
          </div>

          <div class="mb-3 py-3">
            <input 
              type="text"
              class="form-control"
              id="name"
              placeholder="Add New Category"/>
            </input>

            <label for="image" class="form-label">Choose an image:</label>
            <select id="image" name="image" class="form-select">
              {{#each imgs as |img|}}
                <option value="{{img.url}}">{{img.name}}</option>
              {{/each}}
            </select>
          </div>
           
          <div class="d-flex justify-content-evenly">
            <button
              type="submit"
              class="btn btn-primary"
              id="addCatButton">
              Submit
            </button>
            <div>
              <a href="/menu" id="cancelButton" class="btn btn-warning">Cancel</a>
            </div>
          </div>  
        </div>
      </form>
    </div>
  </div>
</div>

<script src="/js/createCategory.js"></script>