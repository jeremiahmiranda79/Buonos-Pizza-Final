            </div>
            <p class="mb-1">{{i.description}}</p>
          </a>
        </div> --}}

        <div class="grid-container">
          {{#each c.menuitems as |i|}}
            <div class="grid-item"><a href="menu/{{i.id}}" class="list-group-item list-group-item-action">
              <div class="d-flex w-100 justify-content-between">
                <h5 class="mb-1">{{i.name}}</h5>
              </div>
              <p class="mb-1">{{i.description}}</p>
            </a>
            </div>
          {{/each}}

        </div>
       
      {{!-- {{/each}} --}}
    {{/each}}
    </div>
    
  </div>
{{/if}}

