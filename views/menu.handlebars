{{#if loggedIn}}
<br><br>
  <center>
    {{!-- <h5>Create a category</h5> --}}
    <a href="/categories/create" class="active btn btn-primary">Create new category</a>
    {{!-- <a href="/menuitems/create" class="active btn btn-primary">Create new menu item</a> --}}
  </center>
  <center>
    <a href="/menuitems/create" class="active btn btn-primary">Create new menu item</a>
  </center>
{{/if}}

{{#if loggedIn}}
  <div class="container-menu">
    {{#each items as |c|}}
      <center>
        <a class="anchor" id="{{c.id}}"></a>
        <h1><strong>{{c.name}}</strong></h1>
        <img src="{{c.image}}" alt="food-image" class="category-image">
        <br>
        <a href="/categories/update/{{c.id}}" class="active btn btn-primary">Update catagory ({{c.name}})</a>
        {{!-- <a href="/menuitems/create" class="active btn btn-primary">Create new menu item in category ({{c.name}})</a> --}}
        {{!-- <button id="deleteButton" data-id="{{cat.id}}" class="btn btn-danger">Delete ({{c.name}})</button> --}}
      </center>
      <br>
      {{#each c.menuitems as |i|}}
        <div class="list-group">
          <a href="menu/{{i.id}}" class="list-group-item list-group-item-action">
            <div class="d-flex w-100 justify-content-between">
              <h5 class="mb-1">{{i.name}}</h5>
            </div>
            <p class="mb-1">{{i.description}}</p>
            <center>
              <a href="/menuitems/update/{{i.id}}" class="active btn btn-primary m-2">Update menu item</a>
            </center>
          </a>
        </div>
      {{/each}}
    {{/each}}
  </div>

{{else}}
  <div class="container-menu">
    <br>
    <div class="grid-container-2">
      {{#each items as |c|}}
      <center>
        <a class="anchor" id="{{c.id}}"></a>
        <h1><strong>{{c.name}}</strong></h1>
        <img src="{{c.image}}" alt="food-image" class="category-image">
      </center>
      {{!-- {{#each c.menuitems as |i|}} --}}
        {{!-- <div class="list-group">
